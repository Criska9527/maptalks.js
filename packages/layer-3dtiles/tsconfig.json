{
  "compilerOptions": {
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "allowJs": true,
    "module": "es2015",
    "target": "es2015",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    //dependencies lib version
    "lib": [
      "es2015",
      "dom"
    ],
    //custom types
    "paths": {},
    "outDir": "./dist/",
    "rootDir": "./src",
    "baseUrl": "./",
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "rollup.config.js"
  ]
}
