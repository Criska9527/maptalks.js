{
  "root": true,
  "env": {
    "es6": true
  },
  "extends": [
    "maptalks"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "importScripts" : true
  },
  "rules": {
    "object-curly-spacing": "off",
    "quotes": "off",
    "indent": ["error", 4, {
      "flatTernaryExpressions": true,
      "CallExpression": {
        "arguments": "off"
      },
      "FunctionDeclaration": {
        "parameters": "off"
      },
      "FunctionExpression": {
        "parameters": "off"
      }
    }]
  }
}
